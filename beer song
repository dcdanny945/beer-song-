let beerArray= [];
function beerSong() {
    for(let beerCount = 99; beerCount>=1;beerCount--){
        if (beerCount ===1){
            beerArray.push("1 bottle of beer on the wall, 1 bottle of beer. Take one down and pass it around, no more bottles of beer on the wall.");
            beerArray.push("No more bottles of beer on the wall, no more bottles of beer.Go to the store and buy some more, 99 bottles of beer on the wall.");
        }
        else{
            beerArray.push(beerCount+ " bottles of beer on the wall," +beerCount+" bottles of beer."+" Take one down and pass it around, "  +(beerCount-1)+" bottles of beer on the wall.");
        }
        
    }
    console.log(beerArray.join('\n'));
}

beerSong();
